<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false" >
        <shape>

            <padding
                android:bottom="@dimen/common3dp"
                android:left="@dimen/common7dp"
                android:right="@dimen/common7dp"
                android:top="@dimen/common3dp" />
            <corners android:radius="@dimen/common8dp" />
            <stroke
                android:width="@dimen/common1dp"
                android:color="@color/gray_d8" />
            <solid android:color="@color/white" />

        </shape>
    </item>

    <item android:state_checked="true" >
        <shape>

            <padding
                android:bottom="@dimen/common3dp"
                android:left="@dimen/common7dp"
                android:right="@dimen/common7dp"
                android:top="@dimen/common3dp" />
            <corners android:radius="@dimen/common8dp" />
            <stroke
                android:width="@dimen/common1dp"
                android:color="@color/theme_coloer" />
            <solid android:color="@color/white" />

        </shape>
    </item>

</selector>