<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 未选中 圆角30 #bababa -->
    <!-- 选中 主题色 圆角30 -->
    <item android:state_checked="false">
        <shape>
            <corners android:radius="@dimen/common30dp" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/common1dp" android:color="@color/gray_ba" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/common30dp" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/common1dp" android:color="@color/theme_coloer" />
        </shape>
    </item>
</selector>