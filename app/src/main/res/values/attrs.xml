<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 圆形头像 -->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>
    <!-- 圆形头像带角标 -->
    <declare-styleable name="IdentityImageView">
        <attr name="img_bigImage" format="reference"/><!--大图片-->
        <attr name="img_smallImage" format="reference"/><!--小图片-->
        <attr name="img_angle" format="float"/><!--标识角度-->
        <attr name="img_radiusScale" format="float"/><!--大小图片比例-->
        <attr name="img_isProgress" format="boolean"/><!--是否有进度条-->
        <attr name="img_progress_color" format="color|reference"/><!--进度条颜色-->
        <attr name="img_border_color" format="color|reference"/><!--边框颜色-->
        <attr name="img_border_width" format="integer"/><!--边框宽度-->
        <attr name="img_hint_smallImageView" format="boolean"/><!--是否隐藏小图片-->
    </declare-styleable>

    <declare-styleable name="CTTourHeaderScrollView">
        <attr name="top_offset" format="dimension" />
    </declare-styleable>
</resources>
