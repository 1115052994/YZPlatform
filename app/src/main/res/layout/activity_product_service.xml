            android:drawableLeft="@drawable/search_pic"
            android:paddingLeft="@dimen/common6dp"
            android:drawablePadding="@dimen/common10dp"
            android:hint="搜索服务项"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/gray_a2" />

        <TextView
            android:id="@+id/mQuit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_15sp"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textColor="@color/theme_coloer"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common15dp"
            android:paddingRight="@dimen/common15dp"/>

    </RelativeLayout>

