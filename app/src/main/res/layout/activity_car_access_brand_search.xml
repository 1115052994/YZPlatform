<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CarBrandSearch"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/header_layout"
        android:id="@+id/head_title"/>
    <View
        android:id="@+id/line0"
        android:layout_below="@id/head_title"
        style="@style/gray_line" />
    <!-- 搜索框 -->
    <RelativeLayout
        android:id="@+id/search"
        android:layout_below="@id/line0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common40dp"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginRight="@dimen/common16dp"
        android:layout_marginTop="@dimen/common7dp"
        android:layout_marginBottom="@dimen/common7dp">
        <!--android:layout_marginRight="@dimen/common30dp"
            android:layout_toLeftOf="@id/cancle"-->
        <RelativeLayout
            android:id="@+id/search_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search"
            android:layout_marginRight="@dimen/common10dp"
            android:layout_toLeftOf="@id/cancle"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <ImageView
                android:id="@+id/qy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qy_big"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common8dp"/>
            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/gray_b9"
                android:textSize="@dimen/text_size_13sp"
                android:layout_toRightOf="@id/qy"
                android:layout_marginLeft="@dimen/common11dp"
                android:background="@null"
                android:hint="品牌导航"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_ff96"
            android:layout_centerVertical="true"
            android:text="取消"/>
    </RelativeLayout>
    <View
        style="@style/gray_line" />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_carBrand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search"
            />

    <RelativeLayout
        android:id="@+id/letter"
        android:layout_width="@dimen/common20dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/common20dp"
        android:layout_marginRight="@dimen/common1dp"
        android:layout_marginTop="@dimen/common180dp"
        android:layout_alignParentRight="true">
        <!--android:background="@color/back_d6">-->
        <com.plt.yzplatform.view.LetterSideBar
            android:id="@+id/letter_side_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/common10dp"/>
    </RelativeLayout>
</RelativeLayout>
