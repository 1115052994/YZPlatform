<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@color/white">
           <include layout="@layout/header_layout" />
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common45dp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="@dimen/common3dp"
                   android:layout_height="@dimen/common14dp"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:background="@drawable/b_e_sg" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:gravity="center_vertical"
                   android:text="产品信息"
                   android:textColor="@color/gray_00"
                   android:textSize="@dimen/text_size_18sp" />
           </LinearLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common45dp"
               android:gravity="center_vertical">
               <TextView
                   android:gravity="center_vertical"
                   android:text="车架号"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:textColor="@color/text_22"/>
               <EditText
                   android:id="@+id/car_cjh"
                   android:background="@null"
                   android:gravity="center_vertical"
                   android:hint="请输入车架号"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common111dp"
                   android:textColor="@color/gray_00"/>
               <LinearLayout
                   android:id="@+id/AddCarProduct_"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginRight="@dimen/common15dp"
                   android:orientation="horizontal"
                   android:gravity="center">
                   <TextView
                       android:text="拍摄"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/gray_c8"
                       android:layout_marginRight="@dimen/common5dp"
                       />
                   <ImageView

                       android:layout_width="@dimen/common9dp"
                       android:layout_height="@dimen/common18dp"
                       android:src="@drawable/public_jump"/>
               </LinearLayout>
           </RelativeLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common45dp"
               android:gravity="center_vertical">
               <TextView
                   android:id="@+id/car_pp"
                   android:background="@null"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common111dp"
                   android:textColor="@color/gray_00"/>
               <TextView
                   android:gravity="center_vertical"
                   android:text="品牌"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:textColor="@color/text_22"/>
               <LinearLayout
                   android:id="@+id/brand_choice"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginRight="@dimen/common15dp"
                   android:orientation="horizontal"
                   android:gravity="center">
                   <TextView
                       android:text="选择品牌"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/gray_c8"
                       android:layout_marginRight="@dimen/common5dp"
                       />
                   <ImageView
                       android:layout_width="@dimen/common9dp"
                       android:layout_height="@dimen/common18dp"
                       android:src="@drawable/public_jump"/>
               </LinearLayout>
           </RelativeLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common45dp"
               android:gravity="center_vertical">
               <TextView
                   android:id="@+id/car_cx"
                   android:background="@null"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common111dp"
                   android:textColor="@color/gray_00"/>
               <TextView
                   android:gravity="center_vertical"
                   android:text="车型"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:textColor="@color/text_22"/>
               <LinearLayout
                   android:id="@+id/models_choice"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginRight="@dimen/common15dp"
                   android:gravity="center"
                   android:orientation="horizontal">
                   <TextView
                       android:text="选择车型"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/gray_c8"
                       android:layout_marginRight="@dimen/common5dp"
                       />
                   <ImageView
                       android:layout_width="@dimen/common9dp"
                       android:layout_height="@dimen/common18dp"
                       android:src="@drawable/public_jump"/>
               </LinearLayout>
           </RelativeLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common45dp"
               android:gravity="center_vertical">
               <TextView
                   android:gravity="center_vertical"
                   android:text="表显里程"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:textColor="@color/text_22"/>
               <EditText
                   android:id="@+id/car_lc"
                   android:background="@null"
                   android:gravity="center_vertical"
                   android:hint="请输入表显里程(万公里)"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common111dp"
                   android:textColor="@color/gray_00"/>
           </RelativeLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common45dp"
               android:gravity="center_vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentStart="true"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:gravity="center_vertical"
                   android:text="售价"
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp" />
               <EditText
                   android:background="@null"
                   android:gravity="center_vertical"
                   android:hint="请输入售价(万)"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common111dp"
                   android:textColor="@color/gray_00"
                   android:id="@+id/car_sj" />
           </RelativeLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common45dp"
               android:gravity="center_vertical">
               <TextView
                   android:gravity="center_vertical"
                   android:text="上牌时间"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common15dp"
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp"/>
               <TextView
                   android:id="@+id/car_sp"
                   android:background="@null"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/common111dp"
                   android:textColor="@color/gray_00"/>
               <LinearLayout
                   android:id="@+id/time_choose"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginRight="@dimen/common15dp"
                   android:orientation="horizontal"
                   android:gravity="center">
                   <TextView
                       android:text="请选择上牌时间"
                       android:textSize="@dimen/text_size_16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/gray_c8"
                       android:layout_marginRight="@dimen/common5dp"
                       />
                   <ImageView
                       android:layout_width="@dimen/common9dp"
                       android:layout_height="@dimen/common18dp"
                       android:src="@drawable/public_jump"/>
               </LinearLayout>
           </RelativeLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/common15dp">
               <TextView
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="变速箱"/>
               <com.plt.yzplatform.view.ExpandableGridView
                   android:id="@+id/gv_bsx"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/common35dp"
                   android:layout_marginRight="@dimen/common45dp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_marginBottom="@dimen/common15dp"
                   android:horizontalSpacing="@dimen/common1dp"
                   android:numColumns="3"
                   android:verticalSpacing="@dimen/common1dp"/>


           </LinearLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>

           <LinearLayout
               android:layout_marginLeft="@dimen/common15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/common15dp"
                   android:text="排放标准"
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp" />

               <com.plt.yzplatform.view.ExpandableGridView
                   android:id="@+id/gv_pfbz"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/common15dp"
                   android:layout_marginLeft="@dimen/common35dp"
                   android:layout_marginRight="@dimen/common45dp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:horizontalSpacing="@dimen/common1dp"
                   android:numColumns="3"
                   android:verticalSpacing="@dimen/common1dp" />
           </LinearLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <!--            排量                  -->
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>

           <LinearLayout
               android:layout_marginLeft="@dimen/common15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/common15dp"
                   android:text="排量"
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp" />
               <com.jaygoo.widget.RangeSeekbar
                   android:id="@+id/seekbar"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/common20dp"
                   app:markTextArray="@array/markArray2"
                   android:layout_marginRight="@dimen/common25dp"
                   app:lineColorSelected="#fc5151"
                   app:textPadding="@dimen/common17dp"
                   app:lineColorEdge="@color/colorSeekBarDefalut"
                   app:cellMode="number"
                   app:seekBarMode="single"
                   app:seekBarResId="@drawable/seekbarpressure_thumb"
                   app:max="5"
                   app:min="1"
                   />

           </LinearLayout>

           <View
               android:layout_marginTop="@dimen/common20dp"
               style="@style/gray_line"/>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/common15dp">
               <TextView
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="座位数"/>
               <com.plt.yzplatform.view.ExpandableGridView
                   android:id="@+id/gv_zws"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/common35dp"
                   android:layout_marginRight="@dimen/common45dp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_marginBottom="@dimen/common15dp"
                   android:horizontalSpacing="@dimen/common1dp"
                   android:numColumns="3"
                   android:verticalSpacing="@dimen/common1dp"/>
           </LinearLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/common15dp">
               <TextView
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="燃料类型"/>
               <com.plt.yzplatform.view.ExpandableGridView
                   android:id="@+id/gv_rllx"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/common35dp"
                   android:layout_marginRight="@dimen/common45dp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_marginBottom="@dimen/common15dp"
                   android:horizontalSpacing="@dimen/common1dp"
                   android:numColumns="3"
                   android:verticalSpacing="@dimen/common1dp"/>
           </LinearLayout>
           <View
               android:layout_below="@id/linear"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common1dp"
               android:background="@color/bg_color"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/common135dp"
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/common15dp">
               <TextView
                   android:textColor="@color/text_22"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="车辆简历"/>
               <LinearLayout
                   android:layout_marginLeft="@dimen/common10dp"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/common85dp"
                   android:orientation="vertical"
                   android:layout_marginTop="@dimen/common15dp"
                   android:layout_marginRight="@dimen/common25dp">
                   <EditText
                       android:id="@+id/car_resume"
                       android:layout_marginLeft="@dimen/common10dp"
                       android:layout_marginTop="@dimen/common10dp"
                       android:layout_marginRight="@dimen/common10dp"
                       android:textColorHint="@color/gray_c8"
                       android:textColor="@color/text_33"
                       android:textSize="@dimen/text_size_16sp"
                       android:gravity="top"
                       android:hint="请对车辆描述"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@null"/>
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_marginTop="@dimen/common15dp"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common50dp">
               <TextView
                   android:id="@+id/but_text"
                   android:gravity="center"
                   android:background="@color/text_ff96"
                   android:textColor="@color/bg_ff"
                   android:text="下一步"
                   android:textSize="@dimen/text_size_18sp"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/common50dp" />
           </LinearLayout>

       </LinearLayout>
   </ScrollView>

</LinearLayout>
