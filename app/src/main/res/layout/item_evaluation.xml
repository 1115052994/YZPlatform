<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/common20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common30dp">
        <com.xtzhangbinbin.jpq.view.CircleImageView
            android:id="@+id/evaluation_image"
            android:layout_width="@dimen/common80dp"
            android:layout_height="@dimen/common80dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/evaluation_image"
            android:layout_marginLeft="@dimen/common12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evaluation_list_phone"
                android:textColor="@color/text_33"
                android:textSize="@dimen/text_size_15sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/common15dp">

                <ImageView
                    android:id="@+id/evaluation_list_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/pj_hstar" />
                <ImageView
                    android:id="@+id/evaluation_list_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pj_hstar"
                    android:layout_marginLeft="@dimen/common5dp"
                    />
                <ImageView
                    android:id="@+id/evaluation_list_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pj_hstar"
                    android:layout_marginLeft="@dimen/common5dp"
                    />
                <ImageView
                    android:id="@+id/evaluation_list_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pj_hstar"
                    android:layout_marginLeft="@dimen/common5dp"
                    />
                <ImageView
                    android:id="@+id/evaluation_list_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pj_hstar"
                    android:layout_marginLeft="@dimen/common5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common14dp"
        android:layout_marginLeft="@dimen/common30dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/text_33"
            android:text="评价内容"/>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/evaluation_list_appraiseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common30dp"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_99"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common30dp"
        android:layout_marginLeft="@dimen/common30dp"
        android:layout_marginTop="@dimen/common10dp">
        <TextView
            android:textSize="@dimen/text_size_13sp"
            android:id="@+id/evaluation_list_appraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            />
    </LinearLayout>
    <!--<com.nex3z.flowlayout.FlowLayout-->
        <!--android:layout_marginLeft="@dimen/common30dp"-->
        <!--android:layout_marginTop="@dimen/common5dp"-->
        <!--android:layout_marginRight="@dimen/common30dp"-->
        <!--android:id="@+id/evaluation_list_flow"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/common22dp"-->
      <!--/>-->
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/evaluate_layout"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/common25dp"
        android:layout_marginTop="@dimen/common8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:max_select="1"
        >

    </com.zhy.view.flowlayout.TagFlowLayout>

    <View
        style="@style/gray_line"
        android:layout_marginTop="@dimen/common10dp"
        />
</LinearLayout>