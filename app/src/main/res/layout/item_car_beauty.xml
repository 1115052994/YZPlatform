<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginLeft="@dimen/common15dp"
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:maxEms="9"
            android:lineSpacingExtra="@dimen/common8dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/text_33"/>

        <LinearLayout
            android:layout_marginTop="@dimen/common5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_ff96"
                android:text="优惠价: ¥ "/>
            <TextView
                android:id="@+id/youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_ff96"/>
            <TextView
                android:layout_marginLeft="@dimen/common15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11sp"
                android:textColor="@color/text_33"
                android:text="总价:  "/>
            <TextView
                android:id="@+id/zhongjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11sp"
                android:textColor="@color/text_33"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/common9dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/text_99"
                android:text="订单:"/>
            <TextView
                android:id="@+id/dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/text_99"
                android:text="0"/>
            <TextView
                android:id="@+id/yishiyong_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/text_99"
                android:layout_marginLeft="@dimen/common16dp"
                android:text="已使用:"/>
            <TextView
                android:id="@+id/yishiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/text_99"
                android:text="0"/>
            <TextView
                android:id="@+id/weishiyong_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/text_99"
                android:layout_marginLeft="@dimen/common16dp"
                android:text="未使用:"/>
            <TextView
                android:id="@+id/weishiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/text_99"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/linear"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="@dimen/common17dp"
            android:layout_toLeftOf="@id/item_lilayout1"
            android:id="@+id/bianji"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_lilayout1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:layout_alignBottom="@id/item_iv3"
                android:layout_toRightOf="@id/item_iv3"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/black_66"
                />
            <ImageView
                android:layout_marginRight="@dimen/common10dp"
                android:id="@+id/item_iv3"
                android:src="@drawable/star_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_marginTop="@dimen/common9dp"
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/common15dp"
        android:id="@+id/relat"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否上架"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
            <com.suke.widget.SwitchButton
                android:layout_marginRight="@dimen/common12dp"
                android:id="@+id/switch_button"
                android:layout_width="48dp"
                android:layout_height="24dp"
                app:sb_show_indicator="false"
                app:sb_checked_color="#ff9696"
                app:sb_checked="true"/>
        </LinearLayout>

    </RelativeLayout>
    <View

        android:layout_below="@id/relat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common8dp"
        android:background="@color/bg_color"/>
</RelativeLayout>