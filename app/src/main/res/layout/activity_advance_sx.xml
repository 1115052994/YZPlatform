<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdvanceSX"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/header_layout"/>
    <View
        style="@style/gray_line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 车型 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common44dp"
                android:textColor="@color/text_ff35454"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginLeft="@dimen/common25dp"
                android:gravity="center_vertical"
                android:text="车型"/>
            <View
                style="@style/gray_line"/>
            <com.plt.yzplatform.view.ExpandableGridView
                android:id="@+id/gv_cx"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/common20dp"
                android:layout_marginRight="@dimen/common20dp"
                android:layout_marginTop="@dimen/common10dp"
                android:layout_marginBottom="10dp"
                android:horizontalSpacing="@dimen/common1dp"
                android:numColumns="3"
                android:verticalSpacing="@dimen/common1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common8dp"
                android:background="@color/bg_color"/>
            <!-- 变速箱 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common44dp"
                    android:textColor="@color/text_ff35454"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/common25dp"
                    android:gravity="center_vertical"
                    android:text="变速箱"/>
                <View
                    style="@style/gray_line"/>
                <com.plt.yzplatform.view.ExpandableGridView
                    android:id="@+id/gv_bsx"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/common20dp"
                    android:layout_marginRight="@dimen/common20dp"
                    android:layout_marginTop="@dimen/common10dp"
                    android:layout_marginBottom="@dimen/common15dp"
                    android:horizontalSpacing="@dimen/common1dp"
                    android:numColumns="3"
                    android:verticalSpacing="@dimen/common1dp"/>
            </LinearLayout>
            <!-- 灰色间隔 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common8dp"
                android:background="@color/bg_color"/>
            <!--            车龄                  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/car_year"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common44dp"
                    android:textColor="@color/text_ff35454"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/common25dp"
                    android:gravity="center_vertical"
                    android:text="车龄"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:layout_toRightOf="@id/car_year"
                    android:layout_centerVertical="true"
                    android:text=" (年)"/>
                <TextView
                    android:id="@+id/tv_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:textColor="@color/text_ff96"
                    android:layout_marginRight="@dimen/common17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="五年以内"/>
            </RelativeLayout>
            <View
                style="@style/gray_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common30dp"
                android:layout_marginRight="@dimen/common30dp"
                android:orientation="vertical">
                <com.plt.yzplatform.view.SeekBarPressure
                    android:id="@+id/seekBar_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="不限" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/common20dp"
                style="@style/gray_line"/>

            <!--             里程                -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/car_lc"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common44dp"
                    android:textColor="@color/text_ff35454"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/common25dp"
                    android:gravity="center_vertical"
                    android:text="里程"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:layout_toRightOf="@id/car_lc"
                    android:layout_centerVertical="true"
                    android:text=" (万公里)"/>
                <TextView
                    android:id="@+id/tv_lc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:textColor="@color/text_ff96"
                    android:layout_marginRight="@dimen/common17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1-9万公里"/>
            </RelativeLayout>
            <View
                style="@style/gray_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common30dp"
                android:layout_marginRight="@dimen/common30dp"
                android:orientation="vertical">
                <com.plt.yzplatform.view.SeekBarPressure
                    android:id="@+id/seekBar_lc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0" />

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="12" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="不限" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/common20dp"
                style="@style/gray_line"/>

            <!--            排量                  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/car_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common44dp"
                    android:textColor="@color/text_ff35454"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/common25dp"
                    android:gravity="center_vertical"
                    android:text="排量"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:layout_toRightOf="@id/car_pl"
                    android:layout_centerVertical="true"
                    android:text=" (L)"/>
                <TextView
                    android:id="@+id/tv_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:textColor="@color/text_ff96"
                    android:layout_marginRight="@dimen/common17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="不限"/>
            </RelativeLayout>
            <View
                style="@style/gray_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common30dp"
                android:layout_marginRight="@dimen/common30dp"
                android:orientation="vertical">
                <com.plt.yzplatform.view.SeekBarPressure
                    android:id="@+id/seekBar_pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4.0" />

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5.0" />-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="不限" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/common20dp"
                style="@style/gray_line"/>
            <!-- 灰色间隔 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common8dp"
                android:background="@color/bg_color"/>
            <!-- 排放标准 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common44dp"
                    android:textColor="@color/text_ff35454"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/common25dp"
                    android:gravity="center_vertical"
                    android:text="排放标准"/>
                <View
                    style="@style/gray_line"/>
                <com.plt.yzplatform.view.ExpandableGridView
                    android:id="@+id/gv_pfbz"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/common20dp"
                    android:layout_marginRight="@dimen/common20dp"
                    android:layout_marginTop="@dimen/common10dp"
                    android:layout_marginBottom="@dimen/common15dp"
                    android:horizontalSpacing="@dimen/common1dp"
                    android:numColumns="3"
                    android:verticalSpacing="@dimen/common1dp"/>
            </LinearLayout>
            <!-- 灰色间隔 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common8dp"
                android:background="@color/bg_color"/>
            <!-- 座位数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common44dp"
                    android:textColor="@color/text_ff35454"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/common25dp"
                    android:gravity="center_vertical"
                    android:text="座位数"/>
                <View
                    style="@style/gray_line"/>
                <com.plt.yzplatform.view.ExpandableGridView
                    android:id="@+id/gv_zws"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/common20dp"
                    android:layout_marginRight="@dimen/common20dp"
                    android:layout_marginTop="@dimen/common10dp"
                    android:layout_marginBottom="@dimen/common15dp"
                    android:horizontalSpacing="@dimen/common1dp"
                    android:numColumns="3"
                    android:verticalSpacing="@dimen/common1dp"/>
            </LinearLayout>
            <!-- 灰色间隔 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common8dp"
                android:background="@color/bg_color"/>
            <!-- 燃料类型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common44dp"
                    android:textColor="@color/text_ff35454"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/common25dp"
                    android:gravity="center_vertical"
                    android:text="燃料类型"/>
                <View
                    style="@style/gray_line"/>
                <com.plt.yzplatform.view.ExpandableGridView
                    android:id="@+id/gv_rllx"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/common20dp"
                    android:layout_marginRight="@dimen/common20dp"
                    android:layout_marginTop="@dimen/common10dp"
                    android:layout_marginBottom="@dimen/common15dp"
                    android:horizontalSpacing="@dimen/common1dp"
                    android:numColumns="3"
                    android:verticalSpacing="@dimen/common1dp"/>
            </LinearLayout>
            <!-- 分割线 -->
            <View
                style="@style/gray_line"/>
            <!-- 确定 重置-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common44dp">
                <Button
                    android:id="@+id/reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="重置"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="@color/text_ff96"
                    android:onClick="reset1"
                    android:textSize="@dimen/text_size_18sp"/>
                <Button
                    android:id="@+id/submit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="确定"
                    android:gravity="center"
                    android:background="@color/text_ff96"
                    android:textColor="@color/white"
                    android:onClick="submit1"
                    android:textSize="@dimen/text_size_18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>