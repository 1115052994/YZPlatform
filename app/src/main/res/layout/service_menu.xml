<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/common200dp"
    android:background="@drawable/bg_cricle5_white"
    android:layout_gravity="center_vertical"
    android:paddingLeft="@dimen/common5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mDistance"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/common160dp"
        android:paddingLeft="@dimen/common6dp"
        android:layout_height="@dimen/common50dp"
        android:background="@drawable/selector_service_menu_bg"
        android:drawableLeft="@drawable/selector_menu_drawable_left"
        android:drawablePadding="@dimen/common12dp"
        android:gravity="center_vertical"
        android:text="距离排序"
        android:textColor="@color/selector_service_menu_text" />
    <TextView
        android:id="@+id/mApprise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:paddingRight="@dimen/common160dp"
        android:paddingLeft="@dimen/common6dp"
        android:background="@drawable/selector_service_menu_bg"
        android:drawableLeft="@drawable/selector_menu_drawable_left"
        android:drawablePadding="@dimen/common12dp"
        android:gravity="center_vertical"
        android:text="评价排序"
        android:textColor="@color/selector_service_menu_text" />
    <TextView
        android:id="@+id/mHot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:paddingRight="@dimen/common160dp"
        android:paddingLeft="@dimen/common6dp"
        android:background="@drawable/selector_service_menu_bg"
        android:drawableLeft="@drawable/selector_menu_drawable_left"
        android:drawablePadding="@dimen/common12dp"
        android:gravity="center_vertical"
        android:text="热度排序"
        android:textColor="@color/selector_service_menu_text" />
    <TextView
        android:id="@+id/mSee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:paddingRight="@dimen/common160dp"
        android:paddingLeft="@dimen/common6dp"
        android:background="@drawable/selector_service_menu_bg"
        android:drawableLeft="@drawable/selector_menu_drawable_left"
        android:drawablePadding="@dimen/common12dp"
        android:gravity="center_vertical"
        android:text="浏览量排序"
        android:textColor="@color/selector_service_menu_text" />


</LinearLayout>