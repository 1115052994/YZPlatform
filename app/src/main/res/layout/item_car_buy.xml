<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/common123dp"
    >
    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common10dp"
        >
        <ImageView
            android:id="@+id/image_car"
            android:layout_width="@dimen/common150dp"
            android:layout_height="@dimen/common100dp"
            android:layout_marginTop="@dimen/common5dp"
            android:layout_marginLeft="@dimen/common5dp"
            android:layout_marginBottom="@dimen/common5dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/image_rz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/b_c"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginRight="@dimen/common10dp"
        android:layout_marginBottom="@dimen/common10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_cardes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:lines="2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common4dp">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_10sp"
                android:textColor="@color/text_ff3c"/>
            <TextView
                android:id="@+id/tv_year_miles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_10sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common5dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ly_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv0"
                android:layout_width="@dimen/common35dp"
                android:layout_height="@dimen/common14dp"
                android:text="准新车"
                android:textColor="@color/bg_ff"
                android:gravity="center"
                android:textSize="@dimen/text_size_10sp"
                android:background="@drawable/b_buttom"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/common35dp"
                android:layout_height="@dimen/common14dp"
                android:text="超实惠"
                android:gravity="center"
                android:layout_marginLeft="@dimen/common5dp"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/text_size_10sp"
                android:background="@drawable/b_buttom"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/common35dp"
                android:layout_height="@dimen/common14dp"
                android:text="带保修"
                android:gravity="center"
                android:layout_marginLeft="@dimen/common5dp"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/text_size_10sp"
                android:background="@drawable/b_buttom"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/common35dp"
                android:layout_height="@dimen/common14dp"
                android:text="可退换"
                android:gravity="center"
                android:layout_marginLeft="@dimen/common5dp"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/text_size_10sp"
                android:background="@drawable/b_buttom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common5dp"
            android:background="@drawable/b_d"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b_fire"
                android:layout_marginLeft="@dimen/common5dp"
                android:layout_marginTop="@dimen/common3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/text_size_13sp"
                android:text="首付五万即开走"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        style="@style/gray_line"/>
</RelativeLayout>