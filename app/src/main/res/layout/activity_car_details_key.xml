<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.xtzhangbinbin.jpq.activity.CarDetailsKeyActivity">

    <include layout="@layout/header_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common44dp"
        android:background="@color/gray_ee"
        android:paddingLeft="@dimen/common15dp"
        android:paddingRight="@dimen/common15dp">

        <TextView
            style="@style/black33_text_16sp"
            android:layout_centerVertical="true"
            android:text="基本信息"
            android:textSize="@dimen/text_size_18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/black33_text_16sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common28dp"
                android:text="注："
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                style="@style/black33_text_16sp"
                android:layout_marginLeft="@dimen/common15dp"
                android:drawablePadding="@dimen/common7dp"
                android:drawableRight="@drawable/a"
                android:text="标配"
                android:textSize="@dimen/text_size_14sp" />


            <TextView
                style="@style/black33_text_16sp"
                android:layout_marginLeft="@dimen/common15dp"
                android:drawablePadding="@dimen/common7dp"
                android:drawableRight="@drawable/a1"
                android:text="选配"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                style="@style/black33_text_16sp"
                android:layout_marginLeft="@dimen/common15dp"
                android:drawablePadding="@dimen/common7dp"
                android:drawableRight="@drawable/a2"
                android:text="无"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>

    </RelativeLayout>


    <ExpandableListView
        android:id="@+id/mList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/bg_color" />


</LinearLayout>
