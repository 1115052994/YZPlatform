<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common12dp"
    android:background="@drawable/bg_comp_wallet"
    android:layout_marginLeft="@dimen/common15dp"
    android:layout_marginRight="@dimen/common15dp">
    <com.xtzhangbinbin.jpq.utils.RoundedImageView
        android:id="@+id/image"
        android:layout_marginLeft="@dimen/common2dp"
        android:layout_marginTop="@dimen/common2dp"
        android:layout_marginRight="@dimen/common2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/asdxyd"
        android:adjustViewBounds="true"
        />
    <TextView
        android:textColor="@color/text_66"
        android:id="@+id/name"
        android:layout_marginTop="@dimen/common16dp"
        android:layout_marginLeft="@dimen/common33dp"
        android:layout_marginRight="@dimen/common33dp"
        android:text="全面保障您爱车的出行安全"
        android:drawableRight="@drawable/right_go"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common17dp"/>



</LinearLayout>