<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <View
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common8dp"
        android:background="@color/bg_color"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国银行"
        android:textColor="@color/text_22"
        android:textSize="@dimen/text_size_15sp"
        android:layout_marginTop="@dimen/common20dp"
        android:layout_marginLeft="@dimen/common25dp"/>
    <LinearLayout
        android:layout_marginBottom="@dimen/common15dp"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common26dp"
        android:layout_marginRight="@dimen/common26dp"
        android:background="@drawable/dt"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/leftlayout"
            android:layout_width="@dimen/common0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:background="@drawable/etc_text"
                android:id="@+id/leftname"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="办理请点击"
                android:layout_marginBottom="@dimen/common16dp"
                android:layout_marginRight="@dimen/common38dp"
                android:layout_marginLeft="@dimen/common23dp"
                android:layout_marginTop="@dimen/common16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rightlayout"
            android:layout_width="@dimen/common0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:background="@drawable/etc_text"
                android:id="@+id/rightname"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="呼叫救援"
                android:layout_marginBottom="@dimen/common16dp"
                android:layout_marginRight="@dimen/common23dp"
                android:layout_marginLeft="@dimen/common38dp"
                android:layout_marginTop="@dimen/common16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>