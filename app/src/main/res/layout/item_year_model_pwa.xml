<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common125dp"
        android:gravity="center_vertical">

        <com.xtzhangbinbin.jpq.view.ZQImageViewRoundOval
            android:id="@+id/weisj_image"
            android:layout_width="@dimen/common137dp"
            android:layout_height="@dimen/common96dp"
            android:src="@drawable/personal_collect_img"
            android:layout_marginLeft="@dimen/common15dp"
            android:layout_marginTop="@dimen/common5dp"
           />

        <ImageView
            android:id="@+id/image"
            android:layout_marginLeft="@dimen/common10dp"
            android:src="@drawable/cr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <RelativeLayout
            android:layout_marginTop="@dimen/common5dp"
            android:layout_toRightOf="@id/weisj_image"
            android:layout_marginLeft="@dimen/common10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/weisj_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15sp"
                android:text="北京一众服务科技大萨达所的发韩展有限公司"
                android:textColor="@color/text_33"
                android:layout_marginRight="@dimen/common37dp"
                android:singleLine="false"
                android:ellipsize="none"
                android:maxLines="2"  />
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_below="@+id/weisj_name"
                android:layout_marginTop="@dimen/common8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nian"
                    android:textSize="@dimen/text_size_13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015年"
                    android:textColor="@color/black_66"
                    android:singleLine="false"
                    android:ellipsize="none"
                    />
                <TextView
                    android:id="@+id/gongli"
                    android:textSize="@dimen/text_size_13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/4.8万公里"
                    android:textColor="@color/black_66"
                    android:singleLine="false"
                    android:ellipsize="none"
                    android:maxLines="2"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_below="@+id/layout1"
                android:layout_marginTop="@dimen/common8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/jiangjia"
                    android:textSize="@dimen/text_size_11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">>已降价1.9万"
                    android:textColor="@color/text_ff96"
                    android:singleLine="false"
                    android:ellipsize="none"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/common15dp"
                    android:id="@+id/yuanjia"
                    android:textSize="@dimen/text_size_11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原价: 25.8万"
                    android:textColor="@color/black_66"
                    android:singleLine="false"
                    android:ellipsize="none"
                    android:maxLines="2"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
               >
                <LinearLayout
                    android:layout_marginTop="@dimen/common5dp"
                    android:id="@+id/layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="@dimen/text_size_15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格: # "
                        android:textColor="@color/text_ff29"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="2"
                        />
                    <TextView
                        android:id="@+id/price"
                        android:textSize="@dimen/text_size_15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23.9万"
                        android:textColor="@color/text_ff29"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="2"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_alignBottom="@id/layout3"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common17dp"
                    android:id="@+id/weisj_shanchu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"
                        android:layout_toRightOf="@id/item_iv3"
                        android:textSize="@dimen/text_size_13sp"
                        android:textColor="@color/black_66"
                        />
                    <ImageView
                        android:layout_marginRight="@dimen/common10dp"
                        android:id="@+id/item_iv3"
                        android:src="@drawable/b_d_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>


</LinearLayout>