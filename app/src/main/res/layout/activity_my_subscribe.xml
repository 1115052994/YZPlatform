<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xtzhangbinbin.jpq.activity.MySubscribe">

    <include layout="@layout/header_layout"
        android:id="@+id/head_title"/>
    <View
        android:id="@+id/line"
        android:layout_below="@id/head_title"
        style="@style/gray_line"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/subscribe"/>
    <RelativeLayout
        android:id="@+id/subscribe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common49dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/text_ff96"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/common18dp"
            android:text="添加订阅"/>
    </RelativeLayout>
</RelativeLayout>
