<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CompWalletPresentationActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">

    <include layout="@layout/header_layout"
        android:id="@+id/head_title"/>

    <RelativeLayout
        android:id="@+id/comp_wallet_pre_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title"
        android:clickable="true"
        android:padding="@dimen/common15dp"
        >
        <ImageView
            android:id="@+id/comp_wallet_per_icon"
            android:layout_width="@dimen/common30dp"
            android:layout_height="@dimen/common30dp"
            android:src="@drawable/qb_yhk"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/comp_wallet_per_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qb_yhk"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/comp_wallet_per_icon"
            android:text="银行卡"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/text_33"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="@dimen/common12dp"
            android:layout_height="@dimen/common20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_go"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_below="@id/comp_wallet_pre_card_layout"
        style="@style/gray_line"/>
    <LinearLayout
        android:id="@+id/comp_wallet_pre_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/line1"
        android:padding="@dimen/common15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现余额:"
            android:textSize="@dimen/common15dp"
            android:textColor="@color/text_99"
            />
        <TextView
            android:id="@+id/comp_wallet_pre_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common20dp"
            android:textColor="@color/red_68"
            />
    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@id/comp_wallet_pre_balance_layout"
        style="@style/gray_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/comp_wallet_pre_balance_layout"
        android:padding="@dimen/common15dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textSize="@dimen/common15dp"
            android:textColor="@color/text_99"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/common15dp"
                android:text="￥"
                android:textColor="@color/text_33"
                android:textSize="@dimen/text_size_24sp"
                />
            <EditText
                android:id="@+id/comp_wallet_pre_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_40sp"
                android:paddingLeft="@dimen/common10dp"
                android:textColor="@color/text_33"
                android:background="@null"
                android:inputType="number"
                android:digits="0123456789"
                />
        </LinearLayout>
        <View
            style="@style/gray_line" android:layout_marginLeft="@dimen/common30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示：收入满100元即可申请提款，提款最低金额不得低于100元人民币"
            android:textSize="@dimen/common13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/common30dp"
            android:textColor="@color/text_99"
            />
    </LinearLayout>
    <Button
        android:id="@+id/comp_wallet_pre_submit"
        style="@style/button_bottom"
        android:layout_alignParentBottom="true"
        android:text="提交申请" />
</RelativeLayout>
