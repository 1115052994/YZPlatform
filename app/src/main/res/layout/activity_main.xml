<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.xtzhangbinbin.jpq.activity.MainActivity">

    <FrameLayout
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:layout_alignParentStart="true"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_above="@+id/tab_bottom"
        android:background="@color/bg_color" />

    <RadioGroup
        android:id="@+id/tab_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common53dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/main"
            android:layout_width="@dimen/common0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/common2dp"
            android:drawableTop="@drawable/selector_main"
            android:gravity="center_horizontal"
            android:text="主页"
            android:checked="true"
            android:textSize="@dimen/text_size_11sp"
            android:textColor="@color/selector_main_bottom" />

        <RadioButton
            android:id="@+id/buy"
            android:layout_width="@dimen/common0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/common2dp"
            android:drawableTop="@drawable/selector_buy"
            android:gravity="center_horizontal"
            android:text="车买卖"
            android:textSize="@dimen/text_size_11sp"
            android:textColor="@color/selector_main_bottom" />

        <RadioButton
            android:id="@+id/service"
            android:layout_width="@dimen/common0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/common2dp"
            android:drawableTop="@drawable/selector_service"
            android:gravity="center_horizontal"
            android:text="车服务"
            android:textSize="@dimen/text_size_11sp"
            android:checked="true"
            android:textColor="@color/selector_main_bottom" />

        <RadioButton
            android:id="@+id/money"
            android:layout_width="@dimen/common0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/common2dp"
            android:drawableTop="@drawable/selector_money"
            android:gravity="center_horizontal"
            android:text="车金融"
            android:textSize="@dimen/text_size_11sp"
            android:textColor="@color/selector_main_bottom" />

        <RadioButton
            android:id="@+id/life"
            android:layout_width="@dimen/common0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/common2dp"
            android:drawableTop="@drawable/selector_life"
            android:gravity="center_horizontal"
            android:text="众生活"
            android:textSize="@dimen/text_size_11sp"
            android:textColor="@color/selector_main_bottom" />

    </RadioGroup>
</RelativeLayout>
