<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CompWalletPresentationActivity"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <include layout="@layout/header_layout"
        android:id="@+id/head_title"/>
    <View
        style="@style/gray_line"
        />
    <RelativeLayout
        android:id="@+id/comp_wallet_bind_bank_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title"
        android:padding="@dimen/common15dp"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/comp_wallet_bind_account_bank"
            android:layout_width="@dimen/common30dp"
            android:layout_height="@dimen/common30dp"
            android:src="@drawable/qb_yhk"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qb_yhk"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/comp_wallet_bind_account_bank"
            android:text="银行卡"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/text_33"
            android:layout_marginLeft="10dp"
            />
        <CheckBox
            android:id="@+id/comp_wallet_bind_style_bank"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common15dp"
            android:button="@null"
            android:background="@drawable/orders_submit_checked" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/comp_wallet_bind_wechat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title"
        android:padding="@dimen/common15dp"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common8dp"
        >
        <ImageView
            android:id="@+id/comp_wallet_bind_account_wechat"
            android:layout_width="@dimen/common30dp"
            android:layout_height="@dimen/common30dp"
            android:src="@drawable/b_t_wechat"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qb_yhk"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/comp_wallet_bind_account_wechat"
            android:text="微信"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/text_33"
            android:layout_marginLeft="10dp"
            />
        <CheckBox
            android:id="@+id/comp_wallet_bind_style_wechat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common15dp"
            android:button="@null"
            android:background="@drawable/orders_submit_checked" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/comp_wallet_bind_alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title"
        android:padding="@dimen/common15dp"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common8dp"
        >
        <ImageView
            android:id="@+id/comp_wallet_bind_account_alipay"
            android:layout_width="@dimen/common30dp"
            android:layout_height="@dimen/common30dp"
            android:src="@drawable/b_t_zfb"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qb_yhk"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/comp_wallet_bind_account_alipay"
            android:text="支付宝"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/text_33"
            android:layout_marginLeft="10dp"
            />
        <CheckBox
            android:id="@+id/comp_wallet_bind_style_alipay"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common15dp"
            android:button="@null"
            android:background="@drawable/orders_submit_checked" />
    </RelativeLayout>
</LinearLayout>
