<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plt.yzplatform.activity.AccessCar"
    android:background="@color/white"
    >
    <include layout="@layout/header_layout"
        android:id="@+id/head_title"/>
    <View
        android:id="@+id/line"
        android:layout_below="@id/head_title"
        style="@style/gray_line"/>
    <RelativeLayout
        android:id="@+id/ly_city"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common44dp">
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common15dp"
            android:text="所在城市"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_city">
            <TextView
                android:id="@+id/tv_editcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择所在城市"
                android:layout_marginLeft="@dimen/common31dp"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_c8"
                />
            <TextView
                android:id="@+id/tv_gocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_c8"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common15dp"
                android:layout_centerVertical="true"
                android:text=">"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            style="@style/gray_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_brand"
        android:layout_below="@id/ly_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common44dp">
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common15dp"
            android:text="品牌车系"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_brand">
            <TextView
                android:id="@+id/tv_editbrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择车系"
                android:layout_marginLeft="@dimen/common31dp"
                android:layout_marginRight="@dimen/common30dp"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_c8"
                />
            <TextView
                android:id="@+id/tv_gobrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_c8"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common15dp"
                android:layout_centerVertical="true"
                android:text=">"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            style="@style/gray_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_time"
        android:layout_below="@id/ly_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common44dp">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common15dp"
            android:text="上牌时间"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_time">
            <TextView
                android:id="@+id/tv_edittime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择>年>月"
                android:layout_marginLeft="@dimen/common31dp"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_c8"
                />
            <TextView
                android:id="@+id/tv_gotime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/text_c8"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common15dp"
                android:layout_centerVertical="true"
                android:text=">"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            style="@style/gray_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_lc"
        android:layout_below="@id/ly_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common44dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tv_lc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common15dp"
            android:text="行驶里程"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/tv_editlc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_lc"
            android:hint="请输入行驶里程(注意单位)"
            android:layout_marginLeft="@dimen/common31dp"
            android:textSize="@dimen/text_size_15sp"
            android:inputType="number|numberDecimal"
            android:textColorHint="@color/text_c8"
            android:textColor="@color/text_33"
            android:background="@null"
            />
        <TextView
            android:id="@+id/tv_lcdw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="/万公里"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common16dp"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/text_33"
            />
        <View
            android:layout_alignParentBottom="true"
            style="@style/gray_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/access"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common49dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/text_ff96"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/common18dp"
            android:text="开始估价"/>
    </RelativeLayout>
</RelativeLayout>
