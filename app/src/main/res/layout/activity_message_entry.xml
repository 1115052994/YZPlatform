<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xtzhangbinbin.jpq.activity.MessageEntry">
    <include layout="@layout/header_layout" />
    <View
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common45dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="@dimen/common17dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/common2dp"
                android:layout_height="@dimen/common15dp"
                android:background="@color/text_ff96"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:text="贷款初审资料"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common33dp" />
    </RelativeLayout>

    <View
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common45dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common16dp" />
        <EditText
            android:id="@+id/name"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:hint="请输入姓名"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common111dp" />
    </RelativeLayout>

    <View
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common45dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common16dp" />
        <EditText
            android:id="@+id/phone"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:hint="请输入手机号"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common111dp" />
    </RelativeLayout>


    <View
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common45dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:gravity="center_vertical"
            android:text="电话"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common16dp" />
        <EditText
            android:maxLength="11"
            android:id="@+id/phone2"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:hint="请输入电话号"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common111dp" />
    </RelativeLayout>


    <View
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common45dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:gravity="center_vertical"
            android:text="身份证"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/common16dp" />
        <EditText
            android:id="@+id/idcard"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_22"
            android:hint="请输入身份证"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:textSize="@dimen/text_size_15sp"
            android:maxLength="17"
            android:layout_marginLeft="@dimen/common111dp" />
    </RelativeLayout>
    <View
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>
    <LinearLayout
        android:layout_marginTop="@dimen/common15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <CheckBox
            android:id="@+id/checkbox"
            android:checked="true"
            android:layout_width="@dimen/common18dp"
            android:layout_height="@dimen/common18dp"
            android:button="@null"
            android:background="@drawable/tyzs"
            android:layout_marginRight="@dimen/common4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_ff96"
            android:textSize="@dimen/text_size_15sp"
            android:text="我已同意"/>
        <TextView
            android:id="@+id/zx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_66"
            android:textSize="@dimen/text_size_15sp"
            android:text="查看个人征信授权书"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/common20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/baocun"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/bg_ff"
            android:text="保存"
            android:layout_width="@dimen/common300dp"
            android:layout_height="@dimen/common40dp"
            android:background="@drawable/button_baocun"
            />
    </LinearLayout>







</LinearLayout>
