<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/mPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/b_b_b" />

    <TextView
        android:id="@+id/mName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/b_b_c"
        android:drawablePadding="@dimen/common25dp"
        android:drawableRight="@drawable/b_b_c"
        android:paddingBottom="@dimen/common10dp"
        android:paddingTop="@dimen/common10dp"
        android:text="正前方"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/mContent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/common20dp"
        android:paddingRight="@dimen/common20dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="漆面保持较好，车身结构无修复，无重大事故"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common10dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common10dp">

        <TextView
            android:id="@+id/mIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/24"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>