<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/header_layout" />
    <View
        android:id="@+id/view2"
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="#dadada"/>
    <com.xtzhangbinbin.jpq.view.CircleImageView
        android:id="@+id/addition_image"
        android:layout_below="@id/view2"
        android:layout_marginTop="@dimen/common10dp"
        android:src="@drawable/circle_2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/addition_text_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击更换头像"
        android:layout_below="@id/addition_image"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/text_33"
        android:layout_marginTop="@dimen/common14dp"/>
    <LinearLayout

        android:layout_marginLeft="@dimen/common54dp"
        android:id="@+id/addition_lilayout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common87dp"
        android:layout_below="@+id/addition_text_name"
        android:layout_marginRight="@dimen/common40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名:"
            android:textColor="@color/text_33"
            android:textSize="@dimen/text_size_15sp"/>
        <EditText
            android:id="@+id/addition_ed_name"
            android:layout_marginLeft="@dimen/common18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:background="@null"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/black_22"/>
    </LinearLayout>

        <TextView
            android:id="@+id/introduce_tv"
            android:layout_alignLeft="@id/addition_lilayout"
            android:layout_marginTop="@dimen/common31dp"
            android:layout_below="@+id/addition_lilayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍:"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/text_33"/>
        <EditText
            android:layout_toRightOf="@+id/introduce_tv"
            android:layout_marginTop="@dimen/common31dp"
            android:layout_below="@+id/addition_lilayout"
            android:id="@+id/addition_ed_introduce"
            android:layout_marginLeft="@dimen/common18dp"
            android:layout_marginRight="@dimen/common40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/text_size_15sp"
            android:gravity="top"
            android:textColor="@color/black_22"/>

    <LinearLayout
        android:id="@+id/addition_layout"
        android:layout_width="@dimen/common300dp"
        android:layout_height="@dimen/common40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common80dp"
        android:background="@drawable/star_circle"
        android:gravity="center"
        >
        <TextView
            android:textColor="#ffffff"
            android:text="保存"
            android:layout_marginLeft="@dimen/common10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
