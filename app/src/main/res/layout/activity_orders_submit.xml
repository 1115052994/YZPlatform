<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.xtzhangbinbin.jpq.activity.OrdersSubmitActivity">

    <include layout="@layout/header_layout" />

    <View
        android:id="@+id/orders_submit_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:layout_below="@id/linear"
        android:background="@color/bg_color" />

    <LinearLayout
        android:id="@+id/orders_submit_shop_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:layout_below="@id/orders_submit_split_line"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/common15dp"
            android:src="@drawable/b_t_shop" />

        <TextView
            android:id="@+id/orders_submit_comp_name"
            style="@style/black33_text_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common15dp"
            android:textColor="@color/gray_99" />
    </LinearLayout>

    <View
        android:id="@+id/orders_submit_split_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common5dp"
        android:layout_below="@id/orders_submit_shop_title_layout"
        android:background="@color/bg_color" />

    <LinearLayout
        android:id="@+id/orders_submit_ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_submit_split_line2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orders_submit_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common15dp"
                android:textColor="@color/black_33"
                android:textSize="@dimen/text_size_17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/b_t_yjdd" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/b_t_ptbz" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/b_t_qyrz" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/orders_submit_split_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common5dp"
        android:layout_below="@id/orders_submit_ad_layout"
        android:background="@color/bg_color" />

    <LinearLayout
        android:id="@+id/orders_submit_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_submit_split_line3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common20dp"
                android:layout_marginTop="@dimen/common15dp"
                android:text="金额"
                android:textColor="@color/black_33"
                android:textSize="@dimen/text_size_17sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp">

            <TextView
                android:id="@+id/orders_submit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common40dp"
                android:textColor="@color/red_66"
                android:textSize="@dimen/percent_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common20dp"
                android:layout_marginTop="@dimen/common15dp"
                android:text="￥"
                android:textColor="@color/red_66"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/orders_submit_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/orders_submit_price"
                android:layout_marginBottom="@dimen/common10dp"
                android:layout_marginLeft="@dimen/common20dp"
                android:layout_toRightOf="@id/orders_submit_price"
                android:textColor="@color/gray_c8"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/orders_submit_split_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common5dp"
        android:layout_below="@id/orders_submit_price_layout"
        android:background="@color/bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_submit_split_line4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common20dp"
                android:layout_marginTop="@dimen/common15dp"
                android:text="选择支付方式"
                android:textColor="@color/black_33"
                android:textSize="@dimen/text_size_17sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common1dp"
            android:background="@color/bg_color" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/orders_submit_wechat_icon"
                    android:layout_width="@dimen/common50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:src="@drawable/b_t_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common5dp"
                    android:layout_toRightOf="@id/orders_submit_wechat_icon"
                    android:text="微信支付"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/text_size_17sp" />

                <CheckBox
                    android:id="@+id/orders_submit_paystyle_wechat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common33dp"
                    android:button="@null"
                    android:background="@drawable/orders_submit_checked" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common1dp"
                android:background="@color/bg_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/orders_submit_alipay_icon"
                    android:layout_width="@dimen/common50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:src="@drawable/b_t_zfb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common5dp"
                    android:layout_toRightOf="@id/orders_submit_alipay_icon"
                    android:text="支付宝支付"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/text_size_17sp" />

                <CheckBox
                    android:id="@+id/orders_submit_paystyle_zfb"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common33dp"
                    android:button="@null"
                    android:background="@drawable/orders_submit_checked" />
            </RelativeLayout>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/orders_submit_pay_btn"
        style="@style/button_bottom"
        android:layout_alignParentBottom="true"
        android:text="确认支付" />

</RelativeLayout>
