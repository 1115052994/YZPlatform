<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="false"
    android:clickable="false"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common5dp"
        android:layout_below="@id/linear"
        android:background="@color/bg_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common15dp"
        android:paddingRight="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        >
        <TextView
            android:layout_width="@dimen/common90dp"
            android:layout_height="wrap_content"
            android:text="提现帐户："
            android:textColor="@color/text_99"
            android:textSize="@dimen/text_size_15sp"
            />
        <TextView
            android:id="@+id/item_comp_wallet_presentation_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京银行12345"
            android:textColor="@color/text_33"
            android:textSize="@dimen/text_size_15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common15dp"
        android:paddingRight="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        >
        <TextView
            android:layout_width="@dimen/common90dp"
            android:layout_height="wrap_content"
            android:text="申请金额："
            android:textColor="@color/text_99"
            android:textSize="@dimen/text_size_15sp"
            />
        <TextView
            android:id="@+id/item_comp_wallet_presentation_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥300"
            android:textColor="@color/red_29"
            android:textSize="@dimen/text_size_15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common15dp"
        android:paddingRight="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        >
        <TextView
            android:layout_width="@dimen/common90dp"
            android:layout_height="wrap_content"
            android:text="申请时间："
            android:textColor="@color/text_99"
            android:textSize="@dimen/text_size_15sp"
            />
        <TextView
            android:id="@+id/item_comp_wallet_presentation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请日期"
            android:textColor="@color/text_99"
            android:textSize="@dimen/text_size_15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common10dp"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingLeft="@dimen/common15dp"
            android:paddingRight="@dimen/common15dp"
            >
            <TextView
                android:layout_width="@dimen/common90dp"
                android:layout_height="wrap_content"
                android:text="处理状态："
                android:textColor="@color/text_99"
                android:textSize="@dimen/text_size_15sp"
                />
            <TextView
                android:id="@+id/item_comp_wallet_presentation_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_29"
                android:textSize="@dimen/text_size_15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingLeft="@dimen/common15dp"
            android:paddingRight="@dimen/common15dp"
            >
            <TextView
                android:layout_width="@dimen/common90dp"
                android:layout_height="wrap_content"
                android:text="支付状态："
                android:textColor="@color/text_99"
                android:textSize="@dimen/text_size_15sp"
                />
            <TextView
                android:id="@+id/item_comp_wallet_presentation_pay_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_29"
                android:textSize="@dimen/text_size_15sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/gray_line" android:layout_marginTop="@dimen/common10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common15dp"
        >
        <TextView
            android:id="@+id/item_comp_wallet_presentation_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这里显示的是备注"
            android:textColor="@color/text_99"
            android:textSize="@dimen/text_size_15sp"
            />
    </LinearLayout>
</LinearLayout>