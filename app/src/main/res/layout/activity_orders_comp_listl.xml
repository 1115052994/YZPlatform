<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.plt.yzplatform.activity.OrdersPersonalActivity">

    <include layout="@layout/header_layout" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:layout_below="@id/linear"
        android:background="@color/bg_color" />

    <android.support.design.widget.TabLayout
        android:id="@+id/orders_comp_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common40dp"
        android:paddingTop="@dimen/common10dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/theme_coloer"
        app:tabIndicatorHeight="2dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/theme_coloer"
        app:tabTextColor="@color/text_33">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/orders_comp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
