<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_ordinary_layout"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/common275dp"
        android:layout_height="@dimen/common160dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white_cricle">

        <LinearLayout
            android:id="@+id/a_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/common19dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ordinary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common20dp"
                android:layout_marginRight="@dimen/common20dp"
                android:text="清除缓存"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black_33"/>

            <TextView
                android:id="@+id/tv_ordinary_content2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common60dp"
                android:layout_marginLeft="@dimen/common30dp"
                android:layout_marginRight="@dimen/common30dp"
                android:layout_marginTop="@dimen/common10dp"
                android:text="账号在别处登陆，您被迫下线 若非本人操作，请尽快修改密码"
                android:gravity="center"
                android:textColor="@color/gray_c8"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="visible"/>
        </LinearLayout>
        <View
            android:layout_below="@id/a_title"
            android:layout_width="@dimen/common162dp"
            android:layout_height="@dimen/common1dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/line1"
            android:background="@color/bg_color"/>

        <LinearLayout
            android:layout_below="@id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ordinary_cancel"
                android:layout_width="@dimen/common0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_cricle"
                android:clickable="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/theme_coloer"/>
            <View
                android:layout_width="@dimen/common1dp"
                android:layout_height="@dimen/common17dp"
                android:layout_gravity="center_vertical"
                android:background="@color/bg_color"/>

            <TextView
                android:id="@+id/tv_ordinary_confirm"
                android:layout_width="@dimen/common0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_cricle"
                android:clickable="true"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/theme_coloer"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>