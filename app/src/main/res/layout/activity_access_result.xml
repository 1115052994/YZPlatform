<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plt.yzplatform.activity.AccessResult"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/header_layout"
        android:id="@+id/head_title"/>
    <!-- 灰色间隔 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common8dp"
        android:background="@color/bg_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginRight="@dimen/common21dp"
        android:layout_marginLeft="@dimen/common21dp"
        android:textColor="@color/text_33"
        android:textSize="@dimen/text_size_15sp"
        android:lines="2"
        android:lineSpacingExtra="@dimen/common5dp"
        android:text="评价结果：速腾设计时尚大气,纷繁卓尔不群,帅气帅气!!!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginLeft="@dimen/common21dp"
        android:textColor="@color/text_66"
        android:text="上牌时间:2018-04   北京朝阳   6.78万公里"
        android:layout_marginRight="@dimen/common21dp"
        android:layout_marginBottom="@dimen/common15dp"
        android:textSize="@dimen/text_size_13sp"/>
    <!-- 灰色间隔 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common8dp"
        android:background="@color/bg_color"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common20dp"
        android:layout_marginLeft="@dimen/common36dp"
        android:layout_marginTop="@dimen/common15dp">
        <ImageView
            android:id="@+id/image_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/access2"/>
        <TextView
            android:id="@+id/tv_compPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_fe0000"
            android:textSize="@dimen/text_size_30sp"
            android:text="5.23万"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_99"
            android:layout_toRightOf="@id/tv_compPrice"
            android:layout_alignBottom="@id/tv_compPrice"
            android:layout_marginLeft="@dimen/common4dp"
            android:layout_marginBottom="@dimen/common5dp"
            android:text="(仅供参考)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_fe1616"
            android:textSize="@dimen/text_size_13sp"
            android:layout_below="@id/tv_compPrice"
            android:text="二手车商交易价格"/>
        <TextView
            android:id="@+id/tv_perPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_fe0000"
            android:textSize="@dimen/text_size_30sp"
            android:layout_above="@id/tv_per"
            android:layout_toLeftOf="@id/tv_cankao"
            android:text="5.23万"/>
        <TextView
            android:id="@+id/tv_cankao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_99"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_perPrice"
            android:layout_marginLeft="@dimen/common4dp"
            android:layout_marginBottom="@dimen/common5dp"
            android:text="(仅供参考)"/>
        <TextView
            android:id="@+id/tv_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_fe1616"
            android:textSize="@dimen/text_size_13sp"
            android:layout_alignBottom="@id/image_vs"
            android:layout_alignLeft="@id/tv_perPrice"
            android:text="个人交易价格"/>
    </RelativeLayout>
    <!-- 灰色间隔 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common20dp"
        android:layout_height="@dimen/common8dp"
        android:background="@color/bg_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common44dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/text_33"
        android:text="地域价格"
        />
    <View
        android:id="@+id/line"
        style="@style/gray_line"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
