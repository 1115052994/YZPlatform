<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/common5dp"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/common23dp"
    android:layout_marginBottom="@dimen/common5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b_b_b"/>

    <TextView
        android:id="@+id/mType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="正前方"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/black_33"
        android:drawableLeft="@drawable/b_a_g"
        android:drawableRight="@drawable/b_a_g"
        android:drawablePadding="@dimen/common20dp"/>

    <TextView
        android:id="@+id/mContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13sp"
        android:textColor="@color/black_66"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/common9dp"
        android:text="漆面保持较好，车身结构无修复，无重大事故"/>

</LinearLayout>