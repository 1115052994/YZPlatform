<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mPic"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginRight="@dimen/common15dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/common10dp"
        android:src="@drawable/b_b_b"/>

    <TextView
        android:id="@+id/mType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="正前方"
        android:textSize="@dimen/text_size_15sp"
        android:layout_below="@id/mPic"
        android:textColor="@color/black_33"
        android:drawableLeft="@drawable/b_a_g"
        android:drawableRight="@drawable/b_a_g"
        android:layout_marginTop="@dimen/common10dp"
        android:drawablePadding="@dimen/common20dp"/>

    <TextView
        android:id="@+id/mContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13sp"
        android:textColor="@color/black_66"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mType"
        android:gravity="start"
        android:paddingLeft="@dimen/common15dp"
        android:paddingRight="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginBottom="@dimen/common10dp"
        android:text="漆面保持较好，车身结构无修复，无重大事故"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common5dp"
        android:background="@color/bg_color"/>

</RelativeLayout>