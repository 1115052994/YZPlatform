<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common12dp"

    android:layout_marginLeft="@dimen/common15dp"
    android:layout_marginRight="@dimen/common15dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common130dp"
        android:src="@drawable/asdxyd"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common48dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="@dimen/common10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_ff96"
            android:text="平安贷款"
            android:textSize="@dimen/text_size_18sp"
            />
        <TextView
            android:background="@color/text_ffe3"
            android:layout_marginTop="@dimen/common8dp"
            android:layout_width="@dimen/common191dp"
            android:layout_height="@dimen/common1dp"
            />
    </LinearLayout>
    <TextView
        android:textColor="@color/text_66"
        android:id="@+id/message"
        android:layout_marginTop="@dimen/common16dp"
        android:layout_marginLeft="@dimen/common33dp"
        android:layout_marginRight="@dimen/common33dp"
        android:text="         还不贷款部分款项将保持开机不想吵宣传新里程碑进行补差价保修卡参加巴黎新城那些吃了那空间现场心理健康把你李小龙那你看下你那就不错啦新农村多线程"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common17dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/relayout"
        android:layout_marginRight="@dimen/common34dp"
        android:layout_marginLeft="@dimen/common33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/common34dp"
        android:layout_marginRight="@dimen/common40dp"
        android:layout_marginBottom="@dimen/common18dp"
        android:layout_marginTop="@dimen/common12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/ll"
            android:textColor="@color/text_66"
            android:textSize="@dimen/text_size_10sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6594人浏览"/>
        <ImageView
            android:layout_marginTop="@dimen/common1dp"
            android:layout_marginRight="@dimen/common8dp"
            android:layout_toLeftOf="@id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cjrll"/>
    </RelativeLayout>

</LinearLayout>