<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common8dp"
        android:background="@color/bg_color"/>
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cjr_02"
            android:layout_marginLeft="@dimen/common20dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="@dimen/common11dp"
            android:layout_toRightOf="@id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车险服务"
            android:textColor="@color/text_22"
            android:layout_marginRight="@dimen/common15dp"
            android:drawableRight="@drawable/right_go"
            android:textSize="@dimen/text_size_16sp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/bg_color"/>

    <TextView
        android:layout_marginRight="@dimen/common40dp"
        android:layout_marginLeft="@dimen/common40dp"
        android:layout_marginBottom="@dimen/common30dp"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/image"
        android:text="全面保障您爱车的出行安全全面保障您爱车的出行安全全面保障您爱车的出行安全全面保障您爱车的出行安全全面保障您爱车的出行安全"
        android:textColor="@color/text_66" />



</LinearLayout>