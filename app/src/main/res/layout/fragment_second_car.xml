<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xtzhangbinbin.jpq.fragment.productlist.SecondCar">

    <android.support.design.widget.TabLayout
        android:id="@+id/browsing_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common40dp"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/theme_coloer"
        app:tabTextColor="@color/text_33"
        app:tabIndicatorColor="@color/theme_coloer"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="@color/white"
        >

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/secondcar_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
