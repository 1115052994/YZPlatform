<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common123dp">
    <ImageView
        android:id="@+id/service_provider_image"
        android:layout_width="@dimen/common137dp"
        android:layout_height="@dimen/common95dp"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginBottom="@dimen/common15dp"/>
    <LinearLayout
        android:layout_toRightOf="@id/service_provider_image"
        android:layout_alignBottom="@id/service_provider_image"
        android:layout_marginLeft="@dimen/common10dp"
        android:layout_marginTop="@dimen/common14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/service_provider_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/text_33"
            android:layout_marginRight="@dimen/common37dp"
            android:singleLine="false"
            android:ellipsize="none"
            android:maxLines="2"  />
        <TextView
            android:id="@+id/service_provider_km"
            android:layout_marginTop="@dimen/common10dp"
            android:textSize="@dimen/text_size_10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:singleLine="false"
            android:ellipsize="none"
            android:maxLines="2"
            />

        <RelativeLayout
            android:layout_marginTop="@dimen/common12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/service_provider_dial"
                android:background="@drawable/car_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginBottom="@dimen/common2dp"
                    android:layout_marginTop="@dimen/common4dp"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/personal_collect_phone"/>
                <TextView
                    android:textColor="@color/bg_ff"
                    android:layout_marginBottom="@dimen/common2dp"
                    android:layout_marginTop="@dimen/common3dp"
                    android:layout_marginRight="@dimen/common10dp"
                    android:layout_marginLeft="@dimen/common4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拨号"
                    android:textSize="@dimen/text_size_14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/service_provider_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common15dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/common3dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/personal_collect_delete"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_size_13sp"
                    android:layout_marginLeft="@dimen/common5dp"
                    />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>