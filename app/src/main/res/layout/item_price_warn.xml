<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common140dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common10dp"
    android:paddingRight="@dimen/common15dp">

    <RelativeLayout
        android:layout_width="@dimen/common158dp"
        android:layout_height="@dimen/common105dp">

        <com.plt.yzplatform.view.ZQImageViewRoundOval
            android:id="@+id/mIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common10dp"
            android:layout_marginTop="@dimen/common10dp"
            android:scaleType="fitXY"
            android:src="@drawable/text" />

        <ImageView
            android:id="@+id/isR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/b_c_a" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common11dp">

        <TextView
            android:id="@+id/mCarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="宝马 五系三厢2014款2.0T自动 520i典雅型"
            android:textColor="@color/black_33"
            android:textSize="@dimen/text_size_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年"
                android:textColor="@color/black_66"
                android:textSize="@dimen/text_size_13sp" />

            <TextView
                android:id="@+id/mKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/4.8万公里"
                android:textColor="@color/black_66"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/isDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">>暂未降价"
                android:textColor="@color/black_66"
                android:textSize="@dimen/text_size_11sp" />

            <TextView
                android:id="@+id/mOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common50dp"
                android:text="原价：25.8万"
                android:textColor="@color/black_66"
                android:textSize="@dimen/text_size_11sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现价："
                    android:textColor="#ff2929"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/mNewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.9万"
                    android:textColor="#ff2929"
                    android:textSize="@dimen/text_size_15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/mDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/b_d_b"
                android:drawablePadding="@dimen/common10dp"
                android:text="删除"
                android:textColor="@color/black_66"
                android:textSize="@dimen/text_size_13sp" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>